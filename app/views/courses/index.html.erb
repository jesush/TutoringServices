<% @courses.each do |course| %>
    <div class="panel row">
        <span class="secondary label"><%= course.number %></span>
        <h3><a href="<%= url_for(course) %>"><%= course.name %></a> | <%= course.days %> | <%= "#{course.start_time} - #{course.end_time}" %> <span class="radius success label"><%= link_to 'Edit Course', edit_course_path(course) %></span><span class="radius alert label"><%= link_to 'Delete Course', course, method: :delete, data: { confirm: 'Are you sure?' } %></span></h3>
        <p><%= course.description %></p>
    </div>
<% end %>


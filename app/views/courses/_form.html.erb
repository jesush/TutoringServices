<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row">
    <div class="three columns">
      <%= f.label :course_type %>
      <%= f.text_field :course_type %>
    </div>

    <div class="three columns">
      <%= f.label :number %>
      <%= f.text_field :number %>
    </div>

    <div class="three columns">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="three columns">
    <%= f.label :section_number %>
    <%= f.text_field :section_number %>
  </div>

    <div class="three columns">
      <%= f.label :professor_id %>
      <%= f.collection_select :professor_id, User.where(user_type: "Instructor"), :id, :last_name, :prompt => "Select Professor/Instructor" %>
    </div>

  
  <div class="three columns">
    <%= f.label :days %>
    <%= f.text_field :days %>
  </div>

  <div class="three columns last">
    <%= f.label :semester %>
    <%= f.text_field :semester %>
  </div>
  <div class="two columns">
    <%= f.label :year %>
    <%= f.text_field :year %>
  </div>
  <div class="two columns">
    <%= f.label :start_time %>
    <%= f.time_select :start_time %>
  </div>
  <div class="two columns">
    <%= f.label :end_time %>
    <%= f.time_select :end_time %>
  </div>

  <div class="twelve columns">
    <%= f.label :description %>
    <%= f.text_area :description, rows: "10"%>
  </div>
</div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
